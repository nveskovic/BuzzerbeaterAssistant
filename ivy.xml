<ivy-module version="2.0">
    <info organisation="com.buzzerbeater" module="BuzzerBeater Assistant"/>

    <configurations defaultconfmapping="compile->default">
        <conf name="compile" description="Required to compile application"/>
    </configurations>

    <dependencies>
