        <dependency org="org.seleniumhq.selenium" name="selenium-server" rev="latest.integration"/>
        <dependency org="com.github.detro.ghostdriver" name="phantomjsdriver" rev="latest.integration"/>

        <!-- Presentation purposes -->
        <!-- Presentation purposes -->

